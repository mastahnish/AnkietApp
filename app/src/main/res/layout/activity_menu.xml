<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.solutions.myo.ankietapp.workflow.menu.MenuActivity">


    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:fitsSystemWindows="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
            style="@style/ankietapp_white_big_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="Dziennik pokÅ‚adowy"
            />

        <include
            android:id="@+id/content_menu"
            layout="@layout/content_menu" />

            <Button
                android:id="@+id/email_sign_out_button"
                style="@style/AnkietAppLoginButton"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/action_sign_out"
                android:textStyle="bold" />

        </RelativeLayout>


    </android.support.design.widget.CoordinatorLayout>
</layout>